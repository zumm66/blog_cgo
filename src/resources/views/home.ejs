<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Blog Home</title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="icon" type="image/x-icon" href="/assets/favicon.ico"/>
        <link rel="stylesheet" href="/css/app.css">
    </head>
    <body>
        <!-- Navbar-->
        <%- include("layouts/navbar") %> 

        <!-- Header -->
        <%- include("layouts/header") %> 
        
        <!-- Page content-->
        <div class="container mb-4">
            <div class="card-group">
                <% for (let post of posts) { %>
                    <div class="col-sm-6 col-lg-4">
                        <div class="card" style="margin-top: 16px;">
                            <a href="/post/<%=post.slug%>"><img class="card-img-top" src="<%=post.image%>"></a>
                            <div class="card-body">
                                <a href="/post/<%=post.slug%>" style="color: black;"><h5 class="card-title"><%=post.title%></h5></a>
                                <p class="card-text"><%=post.description%></p>
                                <p class="card-text"><small class="text-muted"><%=post.author%></small></p>
                                <a href="/post/<%=post.slug%>" class="btn btn-primary">Read more â†’</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Footer -->
        <%- include("layouts/footer") %> 

        </body>
</html>
